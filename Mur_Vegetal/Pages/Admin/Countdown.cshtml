@page
@model CountdownAdminModel
@{
    ViewData["Title"] = "Admin - Countdown";
    Layout = "/Pages/Shared/_AdminLayout.cshtml";
}
@section heads{
  <link href="@Url.Content("/web/css/usersite/admin/countdownadmin.css")" rel="stylesheet" type="text/css" />
}


