@page
@model SocialnetworksAdminModel
@{
    ViewData["Title"] = "Admin - Socialnetworks";
    Layout = "/Pages/Shared/_AdminLayout.cshtml";
}
@section heads{
  <link href="@Url.Content("~/css/usersite/admin/socialnetworksadmin.css")" rel="stylesheet" type="text/css" />
}

  <div class="socialnetworks-box">
    <div class="username-param"> 
      <label class="username-param">Nom du compte : </label>
      <input list="Compte" type="text" class="username-param" placeholder="ex:ISEN.Lille">
       <datalist id="Compte">
        <option value="ISEN.Lille"></option>
       </datalist>
    </div>
    
  @{
    //Traitement de la requête GET
    @if (@Model.IsError == false){ 
      @foreach (var e in @Model.Result){
        @if (1==1){//condition de verification données
            <form method="post">
              <div class="home-param">
                <legend class="home-name">@e.pageWidget</legend>
                
                <div class="widget-param">
                  <label class="widget-param">Lien widget : </label>
                  <input type="text" name="widgetlink" class="widget-param" placeholder="ex:https://snapwidget.com/js/snapwidget.js" value="@e.widget">
                </div>

                <div class="button">
                  <button class="button-apply" name="edit" value="edit"> Modifier </button>
                </div>

              </div>
            </form>
        }
      }
    }
    else {
      <div class="medias-param"> Erreur API </div>
    }
  }


  </div>


