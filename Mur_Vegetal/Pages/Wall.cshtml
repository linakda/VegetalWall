@page
@model WallModel
@{
    ViewData["Title"] = "Mur Vegetal";
}
@section heads{
  <link href="@Url.Content("~/css/usersite/wallpage.css")" rel="stylesheet" type="text/css" />
  <script src="//www.amcharts.com/lib/4/core.js"></script>
  <script src="//www.amcharts.com/lib/4/charts.js"></script>
  <script src="https://www.amcharts.com/lib/4/themes/spiritedaway.js"></script>
  <script src="https://www.amcharts.com/lib/4/themes/animated.js"></script>
  <script type="text/javascript" src="@Url.Content("~/js/graph.js")"></script>
}

<div class="wall-body">

  <div class="wall-block box">
    <div class="info">
      <div class="temp-icon"><img class="i1" src="~/images/icones/thermo.png"/></div>
      <div class="temp-text">Température : 15°C </div>
    </div>
    <div class="chart tempchart"> 
      <script>graph("tempchart");</script>
    </div>
  </div>


  <div class="wall-block box">
    <div class="info">
      <div class="temp-icon"><img class="i1" src="~/images/icones/air.png"/></div>
      <div class="temp-text">Qualité de l'air : 20% </div>
    </div>
    <div class="chart tempchart"> 
      <script>graph("chartdiv2");</script>
    </div>
  </div>

  <div class="wall-block box">
    <div class="info">
      <div class="temp-icon"><img class="i1" src="~/images/icones/pression.png"/></div>
      <div class="temp-text">Commande pompe : ? </div>
    </div>
    <div class="chartdiv"> 
      <script>graph();</script>
    </div>
  </div>

  <div class="wall-block box">
    <div class="info">
      <div class="temp-icon"><img class="i1" src="~/images/icones/hydro.png"/></div>
      <div class="temp-text">Humidité : 20% </div>
    </div>
    <div class="chartdiv"> 
      <script>graph();</script>
    </div>
  </div>

  <div class="wall-block box">
    <div class="info">
      <div class="temp-icon"><img class="i1" src="~/images/icones/mouvement.png"/></div>
      <div class="temp-text">Flux entrant/sortant : ? </div>
    </div>
    <div class="chartdiv"> 
      <script>graph();</script>
    </div>
  </div>

  <div class="wall-block box">
    <div class="info">
      <div class="temp-icon"><img class="i1" src="~/images/icones/pression_ruche.png"/></div>
      <div class="temp-text">Pression ruche : ? </div>
    </div>
    <div class="chartdiv"> 
      <script>graph();</script>
    </div>
  </div>

  <div class="wall-block box">
    <div class="info">
      <div class="temp-icon"><img class="i1" src="~/images/icones/thermo_ruche.png"/></div>
      <div class="temp-text">Température ruche : 22°C </div>
    </div>
    <div class="chartdiv"> 
      <script>graph();</script>
    </div>
  </div>

</div> 

  