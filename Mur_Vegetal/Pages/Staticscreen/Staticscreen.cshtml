@page
@model StaticscreenModel
@{
  
    Layout = null;
  
}
<!DOCTYPE html>
<html>
  <head>
      <meta charset="utf-8" />
      <meta name="viewport" content="width=device-width, initial-scale=1.0" />
      <title>StaticScreen</title>
      <link href="@Url.Content("~/css/staticscreen/countdownframe.css")" rel="stylesheet" type="text/css" />
      <link href="@Url.Content("~/css/staticscreen/mediasframe.css")" rel="stylesheet" type="text/css" />
      <link href="@Url.Content("~/css/staticscreen/newsframe.css")" rel="stylesheet" type="text/css" />
      <link href="@Url.Content("~/css/staticscreen/newsframe.css")" rel="stylesheet" type="text/css" />
      <link href="@Url.Content("~/css/staticscreen/socialnetworksframe.css")" rel="stylesheet" type="text/css" />
      <link href="@Url.Content("~/css/staticscreen/staticscreen.css")" rel="stylesheet" type="text/css" />
      <link href="@Url.Content("~/css/staticscreen/wallframe.css")" rel="stylesheet" type="text/css" />
      <script type="text/javascript" src="@Url.Content("~/js/countdown.js")"></script>
      <script type="text/javascript" src="@Url.Content("~/lib/jquery/dist/jquery.js")"></script>
      <script type="text/javascript" src="@Url.Content("~/lib/transition.min.js")"></script>
      <script src="https://www.amcharts.com/lib/4/core.js"></script>
      <script src="https://www.amcharts.com/lib/4/charts.js"></script>
      <script src="https://www.amcharts.com/lib/4/themes/spiritedaway.js"></script>
      <script src="https://www.amcharts.com/lib/4/themes/animated.js"></script>
      <script type="text/javascript" src="@Url.Content("~/js/graph.js")"></script>
  </head>
  <body>
      <div class="staticscreen-body" id="aa" >

  <div class="wallpage-frame" id="a">
    <div class="wall-block box">
    <div class="info">
      <div class="temp-icon"><img class="i1" src="~/images/icones/thermo.png"/></div>
      <div class="temp-text">Température : 15°C </div>
    </div>
    <div class="chart temp-chart"> 
      <script>graph("temp-chart");</script>
    </div>
  </div>


  <div class="wall-block box">
    <div class="info">
      <div class="air-icon"><img class="i1" src="~/images/icones/air.png"/></div>
      <div class="air-text">Qualité de l'air : 20% </div>
    </div>
    <div class="chart air-chart"> 
      <script>graph("air-chart");</script>
    </div>
  </div>

  <div class="wall-block box">
    <div class="info">
      <div class="pression-icon"><img class="i1" src="~/images/icones/pression.png"/></div>
      <div class="pression-text">Commande pompe : ? </div>
    </div>
    <div class="chart pression-chart"> 
      <script>graph("pression-chart");</script>
    </div>
  </div>

  <div class="wall-block box">
    <div class="info">
      <div class="hydro-icon"><img class="i1" src="~/images/icones/hydro.png"/></div>
      <div class="hydro-text">Humidité : 20% </div>
    </div>
    <div class="chart hydro-chart"> 
      <script>graph("hydro-chart");</script>
    </div>
  </div>

  <div class="wall-block box">
    <div class="info">
      <div class="mouv-icon"><img class="i1" src="~/images/icones/mouvement.png"/></div>
      <div class="mouv-text">Flux entrant/sortant : ? </div>
    </div>
    <div class="chart mouv-chart"> 
      <script>graph("mouv-chart");</script>
    </div>
  </div>

  <div class="wall-block box">
    <div class="info">
      <div class="pr-icon"><img class="i1" src="~/images/icones/pression_ruche.png"/></div>
      <div class="pr-text">Pression ruche : ? </div>
    </div>
    <div class="chart pr-chart"> 
      <script>graph("pr-chart");</script>
    </div>
  </div>

  <div class="wall-block box">
    <div class="info">
      <div class="tr-icon"><img class="i1" src="~/images/icones/thermo_ruche.png"/></div>
      <div class="tr-text">Température ruche : 22°C </div>
    </div>
    <div class="chart tr-chart"> 
      <script>graph("tr-chart");</script>
    </div>
  </div>


 
  
  </div>


<div class="newspage-frame" id="b">
    @{ Html.RenderPartial("_News"); }
</div>


<div class="countdown-frame" id = "c">
    @{ Html.RenderPartial("_Countdown"); }
</div>

<div class="mediaspage-frame" id = "d">
    @{ Html.RenderPartial("_Medias"); }
</div>


<div class="socialnetworks-frame" id ="e">
    <!-- SnapWidget -->
    <script src="https://snapwidget.com/js/snapwidget.js"></script>
    <iframe src="https://snapwidget.com/embed/698344" class="snapwidget-widget" allowtransparency="true" frameborder="0" scrolling="no" style="border:none; overflow:hidden; width:100%;"></iframe>
    
</div>

</div>



<script type="text/javascript" src="@Url.Content("~/js/staticscreen.js")"></script>
<script>
  $(document).ready(function(){
$("g[aria-labelledby]").hide();
});
</script>
</body>
</html>

  
