<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Mur_Vegetal</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    @RenderSection("heads", required: false)
</head>
<body>
    <div class="navbar">
            <a asp-page="/Index">Accueil</a>
            <a asp-page="/Wall">Mur Vegetal</a>
            <a asp-page="/News">Informations</a>
            <a asp-page="/Medias">Photos/Vidéos</a>
            <a asp-page="/Countdown">Compte à rebours</a>
            <a asp-page="/Socialnetworks">Réseaux Sociaux</a>
            <a asp-page="/About">À Propos</a>
            <a class="putitright" asp-page="/Admin">Admin</a>
            <a href="javascript:void(0);" class="icon" onclick="myFunction()"><i class="fa fa-bars"></i></a>
    </div>
    <div class="main-body">
        @RenderBody()
    </div>

    <script>
        /* Toggle between adding and removing the "responsive" class to topnav when the user clicks on the icon */
        function myFunction() {
        var x = document.getElementsByClassName("navbar")[0];
        if (x.className === "navbar") {
            x.className += " responsive";
        } else {
            x.className = "navbar";
        }
        }
    </script>
</body>
</html>
