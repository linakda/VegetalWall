@page
@model IndexModel
@{
    ViewData["Title"] = "Accueil";
}
@section heads{
  <link href="@Url.Content("~/css/usersite/homepage.css")" rel="stylesheet" type="text/css" />
  <script type="text/javascript" src="@Url.Content("~/js/countdown.js")"></script>
}

<div class="home-body">
    <div class="wall-box box">
        @{
            @if(@Model.IsErrorWall == false){
                @foreach(var e in @Model.ResultWall){
                    @if(1==1){
                        <div class="wall-info">
                            <div class="wall-icon"><a href="~/Wall"> <img src="~/images/icones/lumiere.png"/> </a></div>
                            <div class="wall-text"><a href="~/Wall"> e.name </a></div> 
                        </div>
                        <div class="wall-info">
                            <div class="wall-icon"><a href="~/Wall"> <img rc="~/images/icones/air.png"/> </a></div>
                            <div class="wall-text"><a href="~/Wall"> e.name </a></div> 
                        </div>
                        <div class="wall-info">
                            <div class="wall-icon"><a href="~/Wall"> <img src="~/images/icones/pression.png"/> </a></div>
                            <div class="wall-text"><a href="~/Wall"> e.name </a></div> 
                        </div>
                        <div class="wall-info">
                            <div class="wall-icon"><a href="~/Wall"> <img src="~/images/icones/hydro.png"/> </a></div>
                            <div class="wall-text"><a href="~/Wall"> e.name </a></div> 
                        </div>
                        <div class="wall-info">
                            <div class="wall-icon"><a href="~/Wall"> <img src="~/images/icones/mouvement.png"/> </a></div>
                            <div class="wall-text"><a href="~/Wall"> e.name </a></div> 
                        </div>
                        <div class="wall-info">
                            <div class="wall-icon"><a href="~/Wall"> <img src="~/images/icones/pression_ruche.png"/> </a></div>
                            <div class="wall-text"><a href="~/Wall"> e.name </a></div>  
                        </div>
                        <div class="wall-info">
                            <div class="wall-icon"><a href="~/Wall"> <img src="~/images/icones/thermo_ruche.png"/> </a></div>
                            <div class="wall-text"><a href="~/Wall"> e.name </a></div>  
                        </div>
                    }
                }
            }
        }
    </div>
</div>


<script type="text/javascript" src="@Url.Content("~/lib/tilt/tilt.jquery.js")"></script>
<script>
    $('.box').tilt({
    perspective: 2000,
    easing:         "cubic-bezier(.03,.98,.52,.99)"
    })
</script>
    

